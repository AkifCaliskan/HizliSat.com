@model List<Sahibinden.Business.Model.User.UserListModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HızlıSat.Com/Kullanıcılar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center" Kullanıcılar></h2>
        @if (User.Identity.Name == "admin")
            {}
            <div class="d-flex justify-content-end mb-3">
                <a href="@Url.Action("AddUser", "User")" class="btn btn-success btn-sm ms-2">Yeni Ekle</a>
            </div>
            }
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th>Ad</th>
                        <th>Soyad</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Adres</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Status</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.RecordDate</td>
                        <td>@user.UserType</td>
                        <td>
                            <button class="btn btn-primary btn-sm ms-2">Düzenle</button>
                            <button class=" btn btn-danger btn-sm ms-2">Sil</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>