@using Sahibinden.AdminPanel.Models.User
@model UserLoginDetailModel
@{
    Layout = "_AuthLayout";
    ViewData["PageTitle"] = "Giriş Yap";
}

<h3>Admin Girişi</h3>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@section PageStyles {
    <style>
        body {
            background: #ffffff; /* Arkaplan Beyaz */
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background: #f8f9fa; /* Kırık Beyaz (Soft Gray) */
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
            opacity: 0;
            transform: scale(0.8);
            animation: fadeIn 0.6s ease-in-out forwards;
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .login-container h3 {
            margin-bottom: 1.5rem;
            font-weight: bold;
            color: #333;
            opacity: 0;
            transform: translateY(-20px);
            animation: slideIn 0.5s ease-in-out 0.3s forwards;
        }

        @@keyframes slideIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-control {
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                box-shadow: 0 0 10px rgba(52, 58, 64, 0.2);
                border-color: #343a40;
            }

        .btn-primary {
            background: #343a40;
            border: none;
            border-radius: 8px;
            padding: 10px;
            width: 100%;
            transition: transform 0.3s ease, background 0.3s ease;
        }

            .btn-primary:hover {
                background: #23272b;
                transform: scale(1.05);
            }

        .forgot-password {
            display: block;
            margin-top: 1rem;
            font-size: 0.9rem;
            color: #666;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .forgot-password:hover {
                color: #343a40;
            }
    </style>
}

<form asp-action="Login" asp-controller="Auth" method="post">
    <div class="form-group">
        <label for="Email">E-Posta</label>
        <input type="email" asp-for="Email" class="form-control mb-2" value="akifcaliskan@gmail.com" required>
    </div>
    <div class="form-group">
        <label for="Password">Şifre</label>
        <input type="password" asp-for="Password" class="form-control mb-2" value="1234" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
</form>

@section PageScripts {

}