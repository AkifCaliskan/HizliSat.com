@using Sahibinden.Business.Model.Advert
@model List<AdvertListModel>
@{
	Layout = "_Layout";
}
@Html.EJS().Grid("RowTemplate").DataSource(x => x.Url(Url.Action("GetAdverts")).Adaptor("UrlAdaptor")).Height("335").Width("auto").Columns(col =>
							{
								col.Field("coverImageUrl").HeaderText("İlan Görseli").Template("#rowtemplate").Add();
								col.Field("Name").HeaderText("İlan Adı").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Width("150").Add();
								col.Field("Status").HeaderText("Durumu").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Width("150").Add();
								col.Field("Description").HeaderText("Açıklama").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Width("150").Add();
								col.Field("CategoryName").HeaderText("Kategori").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Center).Width("150").Add();
								col.HeaderText("İlan Detay").TextAlign(Syncfusion.EJ2.Grids.TextAlign.Left).Width("300").Field("Id").IsPrimaryKey(true).Visible(false).Add();

							}).EditSettings(edit => { edit.AllowAdding(true).AllowEditing(true).AllowDeleting(true); }).Toolbar(new List<string>() { "Add", "Edit", "Delete", "Update", "Cancel" }).ToolbarClick("toolbarClick").Render()

<script>
	function toolbarClick(args){
		var grid = document.getElementById("RowTemplate").ej2_instances[0];
		if(args.item.id === 'RowTemplate_add'){
			args.cancel = true;
			window.location.href='@(Url.Action("AddAdvert", "Advert"))';
		}
	}
</script>
<script id="rowtemplate" type="text/x-template">
	<tr>
		<td class="photo">
			<img src="${coverImageUrl}" alt="${Id}" />
		</td>
		<td class="details">
			<table class="cardtable" cellpadding="3" cellspacing="2">
				<colgroup>
					<col width="50%">
					<col width="50%">
				</colgroup>
				<tbody>
					
				</tbody>
			</table>
		</td>
	 </tr>
</script>

<style type="text/css" class="cssStyles">
	.photo img {
		width: 100px;
		height: 100px;
		border-radius: 50px;
		box-shadow: inset 0 0 1px #e0e0e0, inset 0 0 14px rgba(0, 0, 0, 0.2);
	}

	.photo,
	.details {
		border-color: #e0e0e0;
		border-style: solid;
		border-width: 1px 0px 0px 0px;
	}

	.photo {
		text-align: center;
	}

	.details {
		padding-left: 18px;
	}

	.e-bigger .details {
		padding-left: 25px;
	}

	.e-device .details {
		padding-left: 8px;
	}

	.details > table {
		width: 100%;
	}

	.cardheader {
		font-weight: 600;
	}

	td {
		padding: 2px 2px 3px 4px;
	}
</style>

