<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Admin Panel</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/29.1.33/fluent.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
	<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/29.1.33/bootstrap5.css" />
	<script src="https://cdn.syncfusion.com/ej2/29.1.33/dist/ej2.min.js"></script>
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-base/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-grids/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-buttons/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-popups/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-richtexteditor/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-navigations/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-dropdowns/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-lists/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-inputs/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-calendars/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-notifications/styles/bootstrap5.css" rel="stylesheet" />
	<link href="https://cdn.syncfusion.com/ej2/29.1.33/ej2-splitbuttons/styles/bootstrap5.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/systemjs/0.19.38/system.js"></script>
	<script src="https://cdn.syncfusion.com/ej2/syncfusion-helper.js" type="text/javascript"></script>

	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<script src="https://cdn.syncfusion.com/ej2/29.1.33/dist/ej2.min.js"></script>

	<style>
		body {
			margin: 0;
			font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif
		}

		.navbar {
			position: fixed;
			top: 0;
			width: 100%;
			z-index: 1000;
			background-color: white;
			color: black;
		}


		.sidebar {
			width: 250px;
			min-height: 100vh;
			background-color: #white;
			color: black;
			position: fixed;
			top: 56px;
			left: 0;
			z-index: 900;
			margin-top: 15px;
		}

			.sidebar h4 {
				text-align: center;
				padding: 1rem 0;
				border-bottom: 1px solid #495057;
			}

			.sidebar ul {
				padding: 0;
				list-style: none;
			}

				.sidebar ul li {
					margin: 0;
				}

					.sidebar ul li a {
						display: block;
						padding: 10px 20px;
						color: black;
						text-decoration: none;
						transition: background-color 0.3s ease, transform 0.3s ease;
					}

						.sidebar ul li a:hover {
							background-color: grey;
							transform: scale(1.10);
						}

		.content {
			margin-left: 250px;
			margin-top: 56px;
			padding: 20px;
			background-color: #f8f9fa;
			min-height: 100vh;
		}

		footer {
			text-align: center;
			font-size: 14px;
			color: #6c757d;
			margin-top: 20px;
		}
	</style>
</head>
<body>

	<nav class="navbar navbar-expand-lg navbar-white bg-white">
		<a class="navbar-brand" href="/">Hızlı Sat</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">
					@Html.EJS().Button("signoutbtn").Content("Çıkış Yap").CssClass("e-danger").Render()
				</li>
			</ul>
		</div>
	</nav>
	<div class="sidebar">
		<h4>Admin Panel</h4>
		<ul>
			<li>
				<a href="/Dashboard">
					<i class="fas fa-tachometer-alt" style="margin-right:10px;"></i>Dashboard
				</a>
			</li>
			<li>
				<a href="@Url.Action("Index", "User")" style="color:black; text-decoration:none">
					<i class="fas fa-users" style="margin-right:10px;"></i>Kullanıcı Yönetimi
				</a>
			</li>
			<li>
				<a href="/Settings" style="color: black; text-decoration: none;">
					<i class="fas fa-cog" style="margin-right: 10px;"></i> Ayarlar
				</a>
			<li>
				<a href="@Url.Action("Index","Advert")" style="color:black; text-decoration:none;">
					<i class="fas fa-chart-pie" style="margin-right:10px;"></i> İlan Yönetimi
				</a>
			</li>
			</li>
			<li><a href="/Reports">Raporlar</a></li>
		</ul>
	</div>


	<div class="content">
		@RenderBody()
	</div>

	<footer>
		&copy; 2024 - Admin Panel - Tüm Hakları Saklıdır
	</footer>

	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
	@Html.EJS().ScriptManager()
</body>
</html>
